<h1 class="page-header">Administradores</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        Listando Administradores
        <div class="pull-right" style="margin-top:-5px">
            <%= link_to new_backoffice_admin_path, class:'btn btn-success btn-circle' do %>
                <i class="fa fa-plus"></i>
            <% end %>
        </div>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Email</th>
                        <th>Nome</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                	<% @admins.each do |admin| %>
                    <tr>
                        <td><%= admin.id %></td>
                        <td><%= admin.email %></td>
                        <td><%= admin.name %></td>
                        <td style="width: 100px">
                            <%= link_to edit_backoffice_admin_path(admin), class:'btn btn-primary btn-circle' do %>
                                <i class="fa fa-edit"></i>
                            <% end %>
                            <% unless current_admin == admin %>
                                <%= link_to backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "VocÃª deseja realmente excluir #{admin.email}?"} do %>
                                    <i class="fa fa-times"></i>
                                <% end %>
                            <% else %>
                                <%= link_to '#', disabled:'disabled', class:"btn btn-danger btn-circle" do %>
                                    <i class="fa fa-times"></i>
                                <% end %>
                            <% end %>
                        </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
<!-- /.panel-body -->
</div>
